<div class="row justify-content-center log-in-container  p-3 p-sm-0">

  <div class="card col-md-5 shadow-sm align-items-center">
    <div class="h1 mt-4 text-secondary text-center"><%= t('interface.registration.reset_password.change_password_form.title') %></div>
    <div class="col-md-10 px-4 py-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'devise/shared/error_messages' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-3">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.label :password_confirmation, t('interface.registration.reset_password.change_password_form.new_password') %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: 'form-control bg-white border-gray-dark', id: "user_password" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, t('interface.registration.reset_password.change_password_form.confirm') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control bg-white border-gray-dark' %>
        </div>

        <div class="actions">
          <%= f.submit t('interface.registration.reset_password.change_password_form.button'), class: "btn btn-primary col-md-12" %>
        </div>
      <% end %>
    </div>
    <div class="bg-white card-footer text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
