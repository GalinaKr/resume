<div class="row justify-content-center log-in-container p-3 p-sm-0">

  <div class="card col-md-5 shadow-sm align-items-center">
    <div class="h1 mt-4 text-secondary text-center"><%= t('interface.registration.reset_password.title') %></div>
    <div class="col-md-10 px-4 py-4">
      <div class="text-center mt-2 mb-4">
        <%= render 'devise/shared/error_messages' %>
        <%= t('interface.registration.reset_password.click_link') %>
      </div>

      <div class="text-center mt-5 mb-4">
        <%= image_pack_tag('media/images/email-verify-icon-email.png', class: "mb-4 col-md-5 justify-content-center") %>
      </div>

      <div>
        <%= link_to t('interface.registration.reset_password.resend'),  new_password_path(resource_name), class: "form-control-lg btn btn-outline-secondary col-md-12" %>
      </div>
    </div>
    <div class="bg-white card-footer text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
