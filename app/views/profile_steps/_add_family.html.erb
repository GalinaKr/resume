<!--Add Family Modal-->
<div class="modal fade" id="addFamilyModal" tabindex="-1" role="dialog" aria-labelledby="addFamilyModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="modalLabel">Add Family</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_for :family, url: wizard_path, method: :put do |f| %>
        <%= render partial: 'forms/form_family', locals: { family: nil, f: f,
                                                           modal_id: (@profile.families.size + 1),
                                                           profile: @profile } %>
      <% end %>
    </div>
  </div>
</div>
