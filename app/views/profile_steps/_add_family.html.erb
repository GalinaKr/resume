<!--Add Family Modal-->
<div class="modal fade" id="addFamilyModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="modalLabel">Add Family</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_for :family, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <div class="form-group">
            <label for="firstNameInput" class="h5"><%= I18n.t(:user_first_name) %></label>
            <%= f.text_field :f_first_name, class: "form-control", id: "firstNameInput", placeholder: I18n.t(:user_first_name) %>
            <label for="secondNameInput" class="h5"><%= I18n.t(:user_second_name) %></label>
            <%= f.text_field :f_first_name, class: "form-control", id: "secondNameInput", placeholder: I18n.t(:user_second_name) %>
            <label for="lastNameInput" class="h5"><%= I18n.t(:user_last_name) %></label>
            <%= f.text_field :f_first_name, class: "form-control", id: "lastNameInput", placeholder: I18n.t(:user_last_name) %>

          </div>
          <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
