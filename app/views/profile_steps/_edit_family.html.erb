<!--Edit Family Modal-->
<div class="modal fade" id="editFamilyModal-<%= family.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="postJobStep1Label">Edit Part of Family</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_for :family, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <label for="degreeOfKinshipInput" class="h5"><%= I18n.t(:degree_of_kinship) %></label>
                <%= f.text_field :degree_of_kinship, class: "form-control", id: "degreeOfKinshipInput", value: family.degree_of_kinship %>
              </div>
            </div>

            <div class="row ">
              <div class="col">
                <label for="firstNameInput" class="h5"><%= I18n.t(:user_first_name) %></label>
                <%= f.text_field :f_first_name, class: "form-control", id: "firstNameInput", value: family.f_first_name %>
              </div>
              <div class="col">
                <label for="secondNameInput" class="h5"><%= I18n.t(:user_second_name) %></label>
                <%= f.text_field :f_second_name, class: "form-control", id: "secondNameInput", value: family.f_second_name %>
              </div>
              <div class="col">
                <label for="lastNameInput" class="h5"><%= I18n.t(:user_last_name) %></label>
                <%= f.text_field :f_last_name, class: "form-control", id: "lastNameInput", value: family.f_last_name %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <label for="birthdayInput" class="h5"><%= I18n.t(:birthday) %></label>
                <%= f.date_field :f_birthday, class: "form-control", id: "birthdayInput", value: family.f_birthday %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <label for="placeOfWorkInput" class="h5"><%= I18n.t(:place_of_work) %></label>
                <%= f.text_field :place_of_work, class: "form-control", id: "placeOfWorkInput", value: family.place_of_work %>
              </div>
            </div>
          </div>
          <%= f.hidden_field :id, value: family.id %>
        <div class="modal-footer">
          <%= f.submit 'Delete', class: "btn btn-outline-danger mr-2" %>
          <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
