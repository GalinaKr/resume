<!--Edit Education Modal-->
<div class="modal fade" id="editEducationModal-<%= profile_education.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="postJobStep1Label">Edit Education</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_for :profile_education, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <div class="form-group">
            <label for="editInstitutionInput" class="h5">Institution</label>
            <%= f.text_field :institution, class: "form-control", id: "editInstitutionInput", placeholder: "Enter the school you attended", value: profile_education.institution %>
          </div>
          <div class="form-group">
            <label for="editDegreeSelect" class="h5">Degree</label>
            <%= f.select :degree,
                         options_for_select(ProfileEducation.degrees.keys, profile_education.degree),
                         {}, class: 'form-control selectpicker',
                         id: 'editDegreeSelect', 'data-style': "bp-btn-select",
                         title: "Please make a selection" %>
          </div>
          <div class="form-group">
            <label for="editCourseInput" class="h5">Course of Study</label>
            <%= f.text_field :course_of_study, class: "form-control", id: "editCourseInput", placeholder: "Enter your degree program", value: profile_education.course_of_study %>
          </div>
          <div class="form-group">
            <label for="editGraduationYear-<%=profile_education.id %>" class="h5">Graduation Year</label>
            <div class="row mb-2 collapse <%= profile_education.currently_studying ? '' : 'show' %>" id="editGraduationDateToggle-<%= profile_education.id %>">
              <div class="col">
                <%= f.select :graduation_year,
                             options_for_select(ProfileEducation::AVAILABLE_YEARS, profile_education.graduation_year),
                             {}, class: 'form-control selectpicker',
                             id: "editGraduationYear-#{profile_education.id}", 'data-style': "bp-btn-select", title: "Year" %>
              </div>
              <div class="col"></div>
            </div>
            <div class="custom-control custom-checkbox">
              <%= f.check_box :currently_studying, class: "custom-control-input #{profile_education.currently_studying ? 'collapsed' : ''}", id: "editCurrentlyStudying-#{profile_education.id}", type: "button", 'data-bs-toggle': "collapse", 'data-target': "#editGraduationDateToggle-#{profile_education.id}", 'aria-expanded': "false", 'aria-controls': "editGraduationDateToggle-#{profile_education.id}", checked: "#{profile_education.currently_studying ? 'checked' : 'false'}" %>
              <label class="custom-control-label" for="editCurrentlyStudying-<%=profile_education.id %>">Currently Studying</label>
            </div>
          </div>
          <div class="form-group mb-0">
            <label for="editEducationDescriptionTextarea" class="h5">Description</label>
              <span class="text-dark"> (optional)</span>
            <%= f.text_area :description, class: "form-control", id: "editEducationDescriptionTextarea", placeholder: "Enter a brief description", rows: 3, value: profile_education.description %>
          </div>
          <%= f.hidden_field :id, value: profile_education.id %>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Delete', class: "btn btn-outline-danger mr-2 d-none" %>
          <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  <% if @profile.profile_educations.count > 1 %>
    $('.modal-footer').addClass('justify-content-between');
    $('.btn-outline-danger').removeClass('d-none');
  <% end %>
</script>
