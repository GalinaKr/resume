<%= render 'nav_bar/profile_flow_nav_bar' %>

<!--Progress Meter, Step 4-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 700px;">
    <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">40%</div>
</div>

<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width:800px">
    <div class="card-title text-center">
      <div class="h2">
        <%= form_for :family, url: wizard_path, method: :put do |f| %>
          <div class="text-center">
            <h2><%= I18n.t :info_about_family %></h2>
          </div>

          <div class="form-group mb-4">
            <div class="row">
              <%= f.label I18n.t :degree_of_kinship, class: 'form-label' %>
              <%= f.text_field :degree_of_kinship, class: 'form-control' %>
            </div>

            <div class="row">
              <div class="col">
                <%= f.label I18n.t :user_first_name, class: 'form-label' %>
                <%= f.text_field :f_first_name, class: 'form-control' %>
              </div>
              <div class="col">
                <%= f.label I18n.t :user_second_name, class: 'form-label' %>
                <%= f.text_field :f_second_name, class: 'form-control' %>
              </div>
              <div class="col">
                <%= f.label I18n.t :user_last_name, class: 'form-label' %>
                <%= f.text_field :f_last_name, class: 'form-control' %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.label I18n.t :birthday, class: 'form-label' %>
                <%= f.text_field :f_birthday, class: 'form-control', :data => { :provide => :datepicker } %>
              </div>
            </div>

            <div class="row">
              <%= f.label I18n.t :place_of_work, class: 'form-label' %>
              <%= f.text_field :place_of_work, class: 'form-control' %>
            </div>

            <!--Add another part of family -->

            <div class="row">
              <div class="col-md">
              <button type="button" class="btn btn-outline-primary">Add another</button>
              </div>
            </div>

          </div>
          <div class="d-flex justify-content-between">
            <%= link_to I18n.t(:back), previous_wizard_path, class: "btn btn-link px-0" %>
            <%= f.submit I18n.t(:next), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
