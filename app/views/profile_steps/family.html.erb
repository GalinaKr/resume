<%= render 'nav_bar/profile_flow_nav_bar' %>

<!--Progress Meter, Step 4-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 700px;">
    <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">40%</div>
</div>

<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width:800px">
    <div class="card-title text-center">
      <div class="h2">
          <div class="text-center">
            <h2><%= I18n.t :info_about_family %></h2>
          </div>
          <div class="mb-4">
            <% if @profile.families.present? %>
              <% @profile.families.order(f_birthday: :desc).each do |family| %>
                <div class="d-flex align-items-center justify-content-between mb-3">
                  <div class="w-100">
                    <div class="row">
                      <div class="col mb-1 text text-wrap text-break"><%= family.degree_of_kinship %></div>
                    </div>
                    <div class="row bp-text-sm">
                      <div class="col-md text-wrap text-break"><%= family.full_name %>,<%= family.f_birthday %>, <%= family.place_of_work %></div>
                    </div>
                  </div>
                  <%= render 'edit_family', { family: family, profile: @profile } %>
                  <button class="btn btn-link" type="button" data-toggle="modal" data-target="#editFamilyModal-<%= family.id %>"><i class="fas fa-pencil-alt" style="font-size: 24px"></i></button>
                </div>
              <% end %>
            <% end %>
            <button class="btn btn-outline-primary" data-toggle="modal" data-target="#addFamilyModal"><i class="fas fa-plus mr-2"></i>Add Part of Family</button>
          </div>

          </div>
          <div class="d-flex justify-content-between">
            <%= link_to I18n.t(:back), previous_wizard_path, class: "btn btn-link px-0" %>
            <%= link_to I18n.t(:next), next_wizard_path, class: "btn btn-primary", id: "NextBtn" %>
          </div>
      </div>
    </div>
  </div>
</div>

<%= render 'add_family'%>
