
<%= render partial: 'shared/job_short_description', locals: { job: job } %>
<span class="badge badge-secondary mt-1"><%= job.position_length&.capitalize %></span>
<span class="badge badge-secondary mt-1"><%= job.hours_needed&.capitalize %></span>
<% if job.daytime_availability_required? %>
  <div class="bp-text-sm mt-2">
    <i class="far fa-clock fa-lg fa-fw text-secondary"></i> Daytime availability is required <span class="text-secondary">(9AM-5PM <%= job.time_zone %>)</span>
  </div>
<% end %>
<% if job.required_regional_knowledge.present? %>
  <div class="bp-text-sm mt-2">
    <i class="fas fa-lg fa-fw fa-map-marker-alt text-secondary"></i>  Regional knowledge of <span class="text-secondary"><%= job.required_regional_knowledge %></span> is required
  </div>
<% end %>